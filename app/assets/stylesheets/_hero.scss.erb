section.hero {
	height: 100vh;
	width: 100%;
	background-size: cover;
	position: relative;

	&.batman {
		background: url(<%= asset_path 'batman.jpg' %>) top center no-repeat;
	}

	&.superman {
		background: url(<%= asset_path 'superman.jpg' %>) top center no-repeat;
	}

	article.half-screen {
		width: 50%;
		float: left;
		height: 100vh;
		background-position: center center;
		background-repeat: no-repeat;
		background-size: cover;

		img {
			height: auto;
			max-width: 100%;
		}

		.btn-go {
			color: white;
			font-size: 20px;
			display: block;
			width: 150px;
			height: 40px;
			line-height: 40px;
			background-color: blue;
			text-align: center;
			font-family: 'Roboto', sans-serif;
			margin: 0 auto;
			text-decoration: none;
			margin-bottom: 20px;
		}

		.block-content {
			width: 50%;
			display: block;
			margin: 0 auto;
			@include full-vertical-alignment();
		}

		input[type="email"] {
			display: block;
			width: 100%;
			height: 40px;
			line-height: 40px;
			padding: 0 20px;
			font-size: 16px;
		}

		input[type="submit"] {
			width: 50%;
			display: block;
			margin: 0 auto;
			height: 40px;
			line-height: 40px;
		}
	}

	h1 {
		color: white;
		font-size: 50px;
		display: block;
		text-align: center;
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		font-family: 'Roboto', sans-serif;
	}
}