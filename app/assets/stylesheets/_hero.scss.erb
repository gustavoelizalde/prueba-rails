section.hero {
	height: 100vh;
	width: 100%;
	background-size: cover;
	position: relative;

	&.batman {
		background: url(<%= asset_path 'batman.jpg' %>) top center no-repeat;
	}

	&.superman {
		background: url(<%= asset_path 'superman.jpg' %>) top center no-repeat;
	}

	h1 {
		color: white;
		font-size: 50px;
		display: block;
		text-align: center;
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		font-family: 'Roboto', sans-serif;
	}
}