section.batman {
	height: 100vh;
	width: 100%;
	background: url(<%= asset_path 'batman.jpg' %>) top center no-repeat;
	background-size: cover;
	position: relative;

	h1 {
		color: white;
		font-size: 50px;
		display: block;
		text-align: center;
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		font-family: 'Roboto', sans-serif;
	}
}